@require "_common"


#sidebar
    background-color: $foreground-color
    color: $background-color

    @media screen and (min-width: $mobile-threshold)
        padding-top: $font-size-default * 3

    a:link, a:visited
        color: inherit
        text-decoration: underline

    a:hover
        color: #2F0


.sidebar__item
    font-size: $font-size-small

    hr
        margin: 0px
        border: 1px inset
    hr.margin-top
        margin-top: ($font-size-small / 3)
    hr.margin-top:first-child
        margin-top: 0px
    hr.margin-bottom
        margin-bottom: ($font-size-small / 3)
    hr.margin-both
        @extends hr.margin-top, hr.margin-bottom

    p
        margin: $font-size-small

    strong
        font-weight: bold
        color: #D3D3D3

        @media screen and (min-width: $mobile-threshold)
            display: block
            text-align: center

        @media screen and (max-width: ($mobile-threshold - 1))
            margin-right: ($font-size-small / 2)

    .sidebar__title
        font-family: sans-serif
        font-size: $font-size-default
        text-align: center
        color: #ff0000
    .sidebar__title:before
        @extends hr, hr.margin-bottom
        content: ''
        display: block
    .sidebar__title:after
        @extends hr, hr.margin-both
        content: ''
        display: block

    ul.links
        display: block
        margin: 0px
        padding: 0px

        > li
            display: block
            margin: 0px
            padding: 0px
            font-size: $font-size-default
            text-align: center
            line-height: ($font-size-default * 2)

            > a:link,
            > a:visited
                display: block

        @media screen and (max-width: ($mobile-threshold - 1))
            > li
                line-height: ($font-size-default * 2.5)

                &.nolink
                    display: none
