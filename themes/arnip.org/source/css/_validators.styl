@require "_common"

/* $css-validator-icon = embedurl("./_resources/_vcss.gif") */
$css-validator-icon = url("data:image/gif;base64,")

.sidebar__item
    ul.validators
        display: block
        text-align: center
        margin: ($font-size-default * 1.5) 0px
        padding: 0px

        > li
            display: block
            text-align: center
            margin: 0px
            padding: 0px

            > a:link,
            > a:visited
                display: block

    
        a.validatoricon__css:link,
        a.validatoricon__css:visited
            display: inline-block
            width: 88px
            height: 31px
            background-repeat: no-repeat
            background-image: $css-validator-icon
            > *
                display: none

        form.validation__jprs
            > button
                border: none
                display: inline-block
                width: 100px
                height: 42px
                background-repeat: no-repeat
                background-image: $jprs-validator-icon
                cursor: pointer
                > *
                    display: none

    @media screen and (max-width: ($mobile-threshold - 1))
        ul.validators
            margin-bottom: 0px

            > li
                display: inline
