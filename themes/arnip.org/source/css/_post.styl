@require "_common"


h1
    font-size: ($font-size-default * 2)
    font-family: sans-serif
    font-weight: bold
    margin: 0px 0px 0px -2px
    padding: 0px 0px 0px $font-size-default

    @media screen and (min-width: $mobile-threshold)
        background-color: $foreground-color
        color: $background-color

    @media screen and (max-width: ($mobile-threshold - 1))
        border-bottom: solid 1px $border-color

    a:link, a:visited
        color: inherit
        text-decoration: none

h2
    font-size: ($font-size-default * 1.5)

h3
    font-size: floor($font-size-default * 1.2)

h2, h3, h4, h5, h6
    margin: $font-size-default 0px ($font-size-default / 2) 0px
    font-family: sans-serif
    font-weight: bold

h1, h2, h3, h4, h5, h6, hr
    clear: both


p, ul, ol, dl
    margin: 0px

paragraphs = p ul ol
for e1 in paragraphs
    for e2 in paragraphs
        {e1} + {e2}
            margin-top: $font-size-default


dl
    display: block
    margin: 0px
    padding: 0px

    > dt
        display: block
        font-family: sans-serif
        font-weight: bold
        font-size: inherit
        float: left
    > dt:after
        content: ":"
        margin-right: ($font-size-default / 2)

    > dd
        display: block
        font-size: inherit
        margin-left: ($font-size-default * 2)

    > dt, dd
        min-height: $font-size-default * 1.5
        line-height: $font-size-default * 1.5

.float-right
    float: right

img.float-right
    margin: $font-size-default 0px $font-size-default $font-size-default
    
img.float-right:first-child
    margin-top: 0px


.float-left
    float: left

img.float-left
    margin: $font-size-default $font-size-default $font-size-default 0px

img.float-left:first-child
    margin-top: 0px

.center
    display: block
    margin-left: auto
    margin-right: auto

.content
    font-size: $font-size-default
    padding: ($font-size-default / 2)
    line-height: 1.5
    clear: both
    overflow: hidden

    :first-child
        margin-top: 0px

    p:last-child
        margin-bottom: 0px
